{
    "name": "ecotone/lite-application",
    "minimum-stability": "dev",
    "homepage": "https://docs.ecotone.tech/",
    "forum": "https://discord.gg/CctGMcrYnV",
    "prefer-stable": true,
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Dariusz Gafka",
            "email": "dgafka.mail@gmail.com"
        }
    ],
    "keywords": [
        "ddd",
        "cqrs",
        "messaging",
        "eip",
        "distributed architecture",
        "ecotone",
        "ddd and cqrs on top of eip"
    ],
    "description": "Quickstart Ecotone Lite Application",
    "autoload": {
        "psr-4": {
            "Ecotone\\Lite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Ecotone\\Lite\\": "tests"
        }
    },
    "require": {
        "ecotone/ecotone": "~1.218.0",
        "ecotone/jms-converter": "~1.218.0",
        "php-di/php-di": "^7.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "behat/behat": "^3.10",
        "guzzlehttp/psr7": "^2.0",
        "phpstan/phpstan": "^1.8",
        "orchestra/testbench": "^7.6|^8.0",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.218.0-dev"
        },
        "ecotone": {
            "repository": "lite-application"
        },
        "merge-plugin": {
            "include": [
                "../local_packages.json"
            ]
        }
    },
    "scripts": {
        "tests:phpstan": "vendor/bin/phpstan",
        "tests:phpunit": [
            "vendor/bin/phpunit"
        ],
        "tests:ci": [
            "@tests:phpstan",
            "@tests:phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true
        }
    }
}