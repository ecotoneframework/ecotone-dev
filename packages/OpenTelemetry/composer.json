{
    "name": "ecotone/open-telemetry",
    "license": "MIT",
    "homepage": "https://docs.ecotone.tech/",
    "forum": "https://discord.gg/CctGMcrYnV",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Dariusz Gafka",
            "email": "dgafka.mail@gmail.com"
        }
    ],
    "keywords": [
        "ecotone",
        "Open telemetry",
        "tracing"
    ],
    "description": "Extends Ecotone with tracing using Open Telemetry",
    "autoload": {
        "psr-4": {
            "Ecotone\\OpenTelemetry\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Ecotone\\OpenTelemetry\\": [
                "tests"
            ]
        }
    },
    "require": {
        "ecotone/ecotone": "~1.208.0",
        "open-telemetry/sdk": "^1.0.0|^1.0.0beta17"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "behat/behat": "^3.10",
        "phpstan/phpstan": "^1.8",
        "wikimedia/composer-merge-plugin": "^2.0",
        "open-telemetry/transport-grpc": "*",
        "open-telemetry/exporter-otlp": "*",
        "symfony/http-client": "^5.4|^6.2|7.0",
        "guzzlehttp/promises": "^1.5",
        "php-http/message-factory": "^1.0",
        "nyholm/psr7": "^1.5",
        "psr/http-client": "^1.0.1",
        "monolog/monolog": "^2.9|^3.3.1",
        "php-http/httplug": "^2.4"
    },
    "scripts": {
        "tests:phpstan": "vendor/bin/phpstan",
        "tests:phpunit": "vendor/bin/phpunit",
        "tests:behat": "vendor/bin/behat -vvv",
        "tests:ci": [
            "@tests:phpstan",
            "@tests:phpunit",
            "@tests:behat"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.208.0-dev"
        },
        "ecotone": {
            "repository": "open-telemetry"
        },
        "merge-plugin": {
            "include": [
                "../local_packages.json"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true,
            "php-http/discovery": true
        }
    }
}