{
  "$schema":"./vendor/phpbench/phpbench/phpbench.schema.json",
  "core.profiles": {
    "ecotone": {
      "runner.bootstrap": "packages/Ecotone/vendor/autoload.php",
      "runner.path": "packages/Ecotone/tests/Benchmark"
    },
    "symfony": {
      "runner.bootstrap": "packages/Symfony/vendor/autoload.php",
      "runner.path": "packages/Symfony/tests/Benchmark"
    },
    "laravel": {
      "runner.bootstrap": "packages/Laravel/vendor/autoload.php",
      "runner.path": "packages/Laravel/tests/Application/Benchmark"
    }
  },
  "core.extensions": ["Monorepo\\PhpBenchExtension"],
  "report.generators": {
    "github-report": {
      "generator": "expression",
      "aggregate": ["benchmark_class", "subject_name", "variant_name"],
      "cols": ["subject", "mem_peak", "mode", "rstdev"]
    }
  },
  "runner.file_pattern": "*Benchmark.php",
  "runner.php_config": {
    "opcache.enable": 1,
    "opcache.enable_cli": 1
  }
}