{
    "type": "ecotone-quickstart",
    "license": "MIT",
    "authors": [
        {
            "name": "Dariusz Gafka",
            "email": "dgafka.mail@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\App\\": "tests"
        }
    },
    "require": {
        "beberlei/assert": "^3.3",
        "ecotone/lite-application-starter": "^1.0.1",
        "ecotone/lite-event-sourcing-starter": "^1.0",
        "moneyphp/money": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "../../packages/local_packages.json"
            ]
        }
    }
}
